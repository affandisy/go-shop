PUT {{baseUrl}}/products/{{productId}}
Content-Type: application/json
Authorization: Bearer {{adminToken}}

{
  "name": "iPhone 15 Pro Max (Updated)",
  "description": "Latest iPhone with A17 Pro chip - Now with special discount!",
  "price": 18999000,
  "stock": 45,
